{
  "name": "copilot-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "npm run dev:web",
    "predev:web": "kill-port 3100 || true",
    "dev:web": "cross-env PORT=3100 next dev -p 3100",
    "stop:web": "kill-port 3100 || true",
    "dev:api": "cross-env PYTHONPATH=.. BACKEND_PORT=5050 python3 -m backend.app",
    "dev:electron": "sh -c 'URL=${DESKTOP_RENDERER_URL:-http://localhost:3100} && cross-env RENDERER_URL=$URL electron .'",
    "dev:electron:wait": "wait-on http://localhost:3100 tcp:5050 && node ../scripts/desktop_preflight.js && cross-env RENDERER_URL=http://localhost:3100 electron .",
    "dev:desktop": "concurrently -n WEB,API,ELECTRON -c auto \"npm:dev:web\" \"npm:dev:api\" \"npm:dev:electron:wait\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron": "wait-on http://localhost:3100/browser && cross-env NODE_ENV=production APP_URL=http://localhost:3100 electron .",
    "app:dev": "npm run dev:desktop",
    "build:web": "next build",
    "start:web": "node scripts/start-next.mjs",
    "build:desktop": "npm run build:web && electron-builder",
    "desktop": "npm-run-all -s start:web electron",
    "lint": "eslint . --max-warnings=0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "cmdk": "^1.1.1",
    "next": "^14.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "swr": "^2.3.6",
    "tw-animate-css": "^1.4.0",
    "wait-on": "^7.2.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "24.5.2",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.25",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "date-fns": "^3.6.0",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "8.57.1",
    "eslint-config-next": "15.5.4",
    "jsdom": "^24.0.0",
    "kill-port": "^2.0.1",
    "lucide-react": "^0.379.0",
    "npm-run-all": "^4.1.5",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.4.5",
    "vitest": "^1.5.3"
  },
  "build": {
    "appId": "com.personal.searchengine",
    "files": [
      "electron/**/*",
      ".next/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
